{
  "src_folders": [
    "e2e"
  ],
  "output_folder": "reports",
  "custom_commands_path": [
    "nightwatch_extend/commands",
    "nightwatch_extend/commands/awards",
    "nightwatch_extend/commands/roles",
    "nightwatch_extend/commands/agenda",
    "nightwatch_extend/commands/partner"
  ],
  "globals_path": "",
  "live_output ": true,
  "detailed_output": true,
  "globals": {
    "waitForConditionTimeout": 30000,
    "abortOnAssertionFailure": true
  },
  "test_workers": {
    "enabled": true,
    "workers": 3
  },
  "test_settings": {
    "default": {
      "filter": "**/*.run.js",
      "selenium_host": "127.0.0.1",
      "selenium_port": 4444,
      "launch_url": "http://alpha.skynet.managementevents.com",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "screens"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": [
            "ash-touch-hud"
          ]
        }
      }
    }
  }
}
